<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/exerciseRecordFragment">


    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.example.giantsecret.ui.StatisticFragment"
        tools:layout="@layout/fragment_statistic"
        android:label="@string/input_one_rm" />
    <fragment
        android:id="@+id/routineFragment"
        android:name="com.example.giantsecret.ui.RoutineFragment"
        tools:layout="@layout/fragment_routine"
        android:label="@string/routine" >
        <action android:id="@+id/createRoutineAction"
            app:destination="@+id/createRoutineFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"

            />
    </fragment>
    <fragment
        android:id="@+id/exerciseRecordFragment"
        android:name="com.example.giantsecret.ui.ExerciseRecordFragment"
        tools:layout="@layout/fragment_exercise_record"
        android:label="@string/exercise_record" >

    </fragment>
    <fragment
        android:id="@+id/createRoutineFragment"
        android:name="com.example.giantsecret.ui.CreateRoutineFragment"
        tools:layout="@layout/fragment_create_routine"
        android:label="createRoutineFragment">
        <action android:id="@+id/createRoutineToCloseAction"
            app:destination="@+id/routineFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/routineFragment"
            app:popUpToInclusive="true"/>
        <action android:id="@+id/createRoutineToCreateExercise"
            app:destination="@+id/createExerciseFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
    <fragment
        android:id="@+id/createExerciseFragment"
        android:name="com.example.giantsecret.ui.CreateExerciseFragment"
        tools:layout="@layout/fragment_create_exercise"
        android:label="createExerciseFragment">
        <action android:id="@+id/createExerciseToCloseAction"
            app:destination="@+id/createRoutineFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/createRoutineFragment"
            app:popUpToInclusive="true"
            />
    </fragment>


    <activity
        android:id="@+id/mainActivity"
        tools:layout="@layout/activity_main"
        android:name="com.example.giantsecret.MainActivity"
        android:label="MainActivity" />

    <activity
        android:id="@+id/createRoutineActivity"
        tools:layout="@layout/activity_main"
        android:name="com.example.giantsecret.ui.CreateRoutineActivity"
        android:label="CreateRoutineActivity" />

</navigation>